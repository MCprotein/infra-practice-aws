{
    "tabWidth": 2,
    "trailingComma": "none",
    "semi": true,
    "singleQuote": true,
    "plugins": [
        "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
        "^@/api/(.*)$",
        "^@/hooks/(.*)$",
        "^@/components/(.*)$",
        "^@/stores/(.*)$",
        "^@/pages/(.*)$",
        "^@/constants/(.*)$",
        "^@/utils/(.*)$",
        "^@/assets/(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}